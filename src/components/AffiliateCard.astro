---
import { CASINO_INFO, type Casino, type Locale } from '../config/affiliate';

interface Props {
  casinoKey: Casino;
  locale: Locale;
  href: string;
  ctaLabel: string;
}

const { casinoKey, locale, href, ctaLabel } = Astro.props;
const casino = CASINO_INFO[casinoKey];
const iconUrl = casinoKey === 'privateclub' ? '/logo-05cd6f2bc249eaf4f439c0a4049674d56a938e9f8f26da0e8f3e11d7f25fab4b.png' : '/logo_barbossabet.svg';
---

<div class="py-5 border-t border-dark-700 first:border-0">
  <div class="flex items-center gap-3 mb-3">
    <div class={`w-12 h-12 rounded border border-dark-600 bg-gradient-to-br ${casino.color} flex items-center justify-center shadow-sm shrink-0 overflow-hidden p-1`}>
      <img src={iconUrl} alt={`${casino.name} logo`} class="w-full h-full object-contain" loading="lazy" />
    </div>
    <div>
      <h4 class="text-white font-semibold text-sm tracking-wide">{casino.name}</h4>
      <p class="text-gray-500 text-xs mt-0.5">{casino.description[locale]}</p>
    </div>
  </div>
  <ul class="space-y-1.5 mb-5">
    {casino.features[locale].slice(0, 2).map((feature) => (
      <li class="text-gray-400 text-xs flex items-start gap-2">
        <svg class="w-3.5 h-3.5 text-brand-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        <span class="leading-tight">{feature}</span>
      </li>
    ))}
  </ul>
  <a
    href={href}
    rel="sponsored nofollow"
    class="block text-center w-full px-4 py-2 border border-dark-600 hover:border-brand-500 hover:text-brand-400 text-gray-300 bg-dark-800/30 hover:bg-dark-800 rounded text-xs font-sans uppercase tracking-widest transition-all"
  >
    {ctaLabel} &rarr;
  </a>
</div>
