---
interface Props {
  title?: string;
  icon?: string;
}

const { title = "PRO TIP", icon = "i" } = Astro.props;
---

<div class="my-8 border-l border-brand-400 bg-white/[0.02] p-6 lg:p-8 rounded-r-xl relative overflow-hidden group">
  <div class="absolute top-0 right-0 w-32 h-32 bg-brand-400/5 rounded-bl-full -z-10 transition-transform duration-500 group-hover:scale-110"></div>
  <div class="flex items-start gap-4">
    <div class="shrink-0 text-2xl mt-0.5 opacity-80">{icon}</div>
    <div>
      <h4 class="font-sans text-brand-300 text-xs font-bold uppercase tracking-[0.2em] mb-3">{title}</h4>
      <div class="prose prose-invert max-w-none prose-p:mb-0 prose-p:text-gray-300 prose-p:leading-relaxed">
        <slot />
      </div>
    </div>
  </div>
</div>
