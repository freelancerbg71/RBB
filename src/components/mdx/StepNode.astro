---
interface Props {
  step: string | number;
  title: string;
}

const { step, title } = Astro.props;
---

<div class="relative pl-12 sm:pl-16 py-6 group border-l hover:border-brand-400 border-white/10 transition-colors ml-4 sm:ml-6 my-2">
  <!-- Circle marker -->
  <div class="absolute left-[-20px] top-7 w-10 h-10 rounded-full bg-dark-800 border-2 border-white/10 group-hover:border-brand-400 group-hover:shadow-[0_0_15px_rgba(74,222,128,0.3)] flex items-center justify-center font-display text-white font-bold transition-all z-10">
    {step}
  </div>
  
  <div>
    <h3 class="text-xl font-bold text-white mb-2 !mt-0 leading-tight">
      {title}
    </h3>
    <div class="prose prose-invert prose-p:text-gray-400 prose-p:leading-relaxed max-w-2xl">
      <slot />
    </div>
  </div>
</div>
