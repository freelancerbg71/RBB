---
interface Props {
  myth: string;
  reality?: string;
  icon?: string;
}

const { myth, reality = "REALITY", icon = "!" } = Astro.props;
---

<div class="my-10 border border-white/10 rounded-2xl overflow-hidden bg-[#1D1716] max-w-3xl">
  <!-- Myth Header -->
  <div class="bg-[#2D1A18] px-6 py-5 border-b border-white/5 flex gap-4 items-start">
    <div class="shrink-0 text-xl">{icon}</div>
    <div>
      <h4 class="font-sans text-red-400 text-xs font-bold uppercase tracking-[0.2em] mb-2">THE MYTH</h4>
      <p class="text-white font-medium text-lg leading-snug">"{myth}"</p>
    </div>
  </div>
  
  <!-- Reality Body -->
  <div class="px-6 py-6 sm:px-8 sm:py-8 lg:px-12 relative">
    <div class="absolute inset-0 bg-gradient-to-r from-[#2a3124]/0 to-[#2a3124]/5 pointer-events-none"></div>
    <h4 class="font-sans text-brand-300 text-xs font-bold uppercase tracking-[0.2em] mb-4">{reality}</h4>
    <div class="prose prose-invert max-w-none prose-p:text-gray-300 prose-p:leading-relaxed prose-p:last:mb-0">
      <slot />
    </div>
  </div>
</div>
